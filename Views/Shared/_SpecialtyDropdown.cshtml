@{
    var db = new tephraSystemEditor.Models.TephraSystemDataAccessLayer();
    var m = db.GetAllAttributes();
}
<!--  edit getallattributes so it only grabs what it needs, because it's slowing down every page -->
<li class="nav-link dropdown">
    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
        Specialties
    <span class="caret"></span></a>
    <ul class="dropdown-menu multi-level" role="menu">
        <li class="dropdown-item", tabindex="-1">
            @Html.ActionLink("All", "Index", "Specialty")
        </li>
        @foreach(var attr in @m)
        {
            <li class="dropdown-submenu">
                    <a  class="dropdown-item" tabindex="-1" asp-controller="Specialty" 
                    asp-action="ShowAttribute" 
                    asp-route-name="@attr.Name" >
                        @attr.Name
                        
                        <!--@Html.ActionLink(@attr.Name, "ShowAttribute", "Specialty", new {name = @attr.Name})-->
                    </a>
                    <ul class = "dropdown-menu">
                    @foreach(var skill in attr.Skills)
                    {
                       <li class="dropdown-item">
                           @Html.ActionLink(@skill.Name, "ShowSkill", "Specialty", new { name = @skill.Name})
                       </li>
                    }
                    </ul>
            </li>
        }
    </ul>
</li>
