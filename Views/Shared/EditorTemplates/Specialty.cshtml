@using tephraSystemEditor.Models

@model Specialty
<div>
    <hr>
    <div class="row">
        <label class="col-sm-1">Name</label>
        @Html.TextBoxFor(b => Model.Name, new {@class = "col-sm-4"} )
    </div>
    <hr>
    <div class="row">
        <label class="col-sm-2">Description</label>
        @Html.TextAreaFor(b => Model.Description, new {@class = "col-sm-10"})
    </div>
    <hr>
    <div class="row">
        <div class="col-sm-1">
        <label>Modifiers</label>
        </div>
        <div class="col-sm-4">
        @Html.EditorFor(c => Model.Bonuses)
        </div>
        <div class="col-sm-6"></div>
    </div>
    <hr>
</div>