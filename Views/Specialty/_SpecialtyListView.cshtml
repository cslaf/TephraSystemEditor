@model IEnumerable<Specialty>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>

    @foreach (var sp in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(s => sp.Name)
        </td>
        <td>
            @Html.DisplayFor(s => sp.Description)
        </td>
        <td>
        @Html.DisplayFor(s => sp.Bonuses)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=sp.SpecialtyID }) |
            @Html.ActionLink("Delete", "Delete", new { id=sp.SpecialtyID })
        </td>
    </tr>
    }
</table>